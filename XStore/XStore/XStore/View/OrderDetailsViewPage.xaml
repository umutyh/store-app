<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XStoreApp.View.OrderDetailsViewPage">
    <ContentPage.Content>
        <StackLayout Padding="20" BackgroundColor="#f9f9f9">
            <Label Text="Order Details" FontSize="24" FontAttributes="Bold" Margin="0,20,0,30"/>
            <Label x:Name="orderNumberShow" FontSize="16" Margin="0,0,0,10"/>
            <Label x:Name="orderDateShow" FontSize="16" Margin="0,0,0,10"/>
            <Label x:Name="orderStatusShow" FontSize="16" Margin="0,0,0,10"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>